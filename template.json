{
    "variables": {
        "dhub_user": "",
        "dhub_pwd": "",
        "repository": "ubuntu",
        "tag":"nginx"
    },
    "sensitive-variables": [
        "dhub_pwd"
    ],
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:xenial",
            "commit": true,
            "changes": [
                "EXPOSE 80",
                "ENTRYPOINT [\"nginx\", \"-g\", \"daemon off;\"]"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "scripts/install_nginx.sh"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "{{user `dhub_user`}}/{{user `repository`}}",
                "tag": "{{user `tag`}}"
            },
            {
                "type": "docker-push",
                "login": true,
                "login_username": "{{user `dhub_user`}}",
                "login_password": "{{user `dhub_pwd`}}"
            }
        ]
    ]
}